            <script>
                var myApp = angular.module('myApp', []);
                myApp.controller('cssCtrl', function($scope){
                    $scope.CSSData = {!CSSData};
                    $scope.PageNames = {!PageNames};
                    console.log($scope.CSSData);
                    if($scope.CSSData.Name == null || $scope.CSSData.Name == '' || $scope.CSSData.Name == 'undefined')
                        $scope.CSSData['Name'] = 'CSSPage';
                    if($scope.CSSData.Font_Family__c == null || $scope.CSSData.Font_Family__c == '' || $scope.CSSData.Font_Family__c == 'undefined')
                        $scope.CSSData.Font_Family__c = 'inherit';
                    if($scope.CSSData.Font_Style__c == null || $scope.CSSData.Font_Style__c == '' || $scope.CSSData.Font_Style__c == 'undefined')
                        $scope.CSSData.Font_Style__c = 'inherit';
                    if($scope.CSSData.Header_Font_Style__c == null || $scope.CSSData.Header_Font_Style__c == '' || $scope.CSSData.Header_Font_Style__c == 'undefined')
                        $scope.CSSData.Header_Font_Style__c = 'inherit';
                    $scope.Button = {};
                    if($scope.CSSData.CS_Button_JSON__c != '')
                        $scope.Button = JSON.parse($scope.CSSData.CS_Button_JSON__c);
                    
                    //Save css data     
                    $scope.saveCss = function(){
                        $scope.loading("show");
                        $scope.CSSData.CS_Button_JSON__c = JSON.stringify($scope.Button);
                        Visualforce.remoting.Manager.invokeAction(
                           '{!$RemoteAction.CSSController.SaveCssData}',JSON.stringify($scope.CSSData),
                            function(result, event){
                                if (event.status) {
                                    $scope.CSSData = result;
                                    alert('CSS succsssfully saved.','Success');
                                    $scope.$apply();
                                }else if (event.type === 'exception') 
                                    alert(event.message);
                                $scope.loading("hide");
                            }, 
                            {escape: false}
                        ); 
                    }
                    
                    $scope.loading = function(action){
                        if(action == "show"){
                            $('#contentLoading').css("display","block");
                        }
                        else{
                            $('#contentLoading').css("display","none");
                        }
                    }
                    
                    $scope.changeFontSize = function(field,size){
                        if(field == 'Email'){
                            $scope.CSSData.Email_Font_Size__c = size;
                        }
                    }
                    
                    $scope.getAttchments = function(){
                        Visualforce.remoting.Manager.invokeAction(
                           '{!$RemoteAction.CSSController.getDocument}', 'Client Invoice',
                            function(result, event){
                                if (event.status) {
                                //Result contains list of account names and account id
                                    console.log(result);
                                    $scope.attachments = result;  
                                    angular.forEach($scope.attachments, function(att){
                                        att.isSelected = false;
                                    });
                                }else if (event.type === 'exception') 
                                    alert(event.message,'error');
                                loading(false);
                                $scope.$apply();
                            }, 
                            {escape: false}
                        );
                    }
                    $scope.getAttchments();
               });
              
              //Filter the SObject JSON
                function filterJSON(data) {
                    var ele = data;
                      
                    for (var i in ele) {
                                       
                        var ele1 = ele[i];
                        if(ele[i].hasOwnProperty('$$hashKey')){
                            delete ele[i]['$$hashKey']
                        }
                        for (var j in ele1) {
                            
                            if(typeof(ele1[j]) == 'object'){
                                if(ele[i][j].hasOwnProperty('$$hashKey')){
                                    delete ele[i][j]['$$hashKey']
                                }
                                for (var k in ele1[j]) {
                                    for (var l in ele1[j][k]) {
                                        if(ele[i][j][k][l].hasOwnProperty('$$hashKey')){
                                            delete ele[i][j][k][l]['$$hashKey']
                                        }
                                    }
                                }
                            }
                        }
                    }
                    if(ele.length === undefined){
                        delete  ele['$$hashKey'];        
                    }
                    return ele;
                }
                
                
                
            </script>
            
